import java.util.*;

public class Album {
    
    BancoDeMusicas banco = new BancoDeMusicas();
    String musica[] = banco.bdmcreator();
    
    private String nome;
    private List<Musica> musicas;

    // Construtor
    public Album(String nome) {
        this.nome = nome;
        this.musicas = new ArrayList<>();
    }

    // Adicionar música ao album
    public void adicionarMusica(Musica musica) {
        musicas.add(musica);
    }

    // Obter todas as músicas do album
    public List<Musica> getMusicas() {
        return musicas;
    }

    // Obter o nome do album
    public String getNome() {
        return nome;
    }

    public List<Album> bdmcreator1() {
        List<Album> albuns = new ArrayList<>();

        // Criação de albuns e associação de músicas
